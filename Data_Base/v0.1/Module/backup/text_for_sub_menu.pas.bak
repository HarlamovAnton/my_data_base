unit text_for_sub_menu;
interface
procedure text_fsm(j:integer);

implementation
uses crt;
procedure text_fsm(j:integer);
var t_fsm:array[1..3] of string;
  procedure v_t_fsm(var t_fsm:array of string);
  var i:integer;
  begin
    for i:=1 to 3 do
    begin
      gotoxy(21,j+i+1);
      write(t_fsm[i-1]);
    end;
  end;
begin
  textcolor(white);
  //write('podklyuchen module text_for_sub_menu');
  case j of
  1,2:begin
        t_fsm[1]:='Консольный режим';
        t_fsm[2]:='Интерактивный режим';
      end;
  3,4:begin
        t_fsm[1]:='Бестиповый файл';
        t_fsm[2]:='Табличный .xml';
        t_fsm[3]:='Текстовый';
      end;
  5:begin
      t_fsm[1]:='Режим разработчика';
      t_fsm[2]:='Цвет фона';
      t_fsm[3]:='Цвет текста';
    end;
  6:begin
      t_fsm[1]:='Харламов Антон';
    end;
  7:begin
      t_fsm[1]:='  Да ';
      t_fsm[2]:='  Нет ';
    end;
  end;
  v_t_fsm(t_fsm);

end;

end.

