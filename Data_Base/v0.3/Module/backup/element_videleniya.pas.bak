unit element_videleniya;
interface
function videl(var x,y:integer;var mas:array of string;g:char;var j:integer):integer;
implementation
uses crt,general_menu;
function videl(var x,y:integer;var mas:array of string;g:char;var j:integer):integer;
var c:char;
begin
  repeat
    gotoxy(x-1,y);
    c:=readkey;
    if c=#0 then
    begin
      c:=readkey;
      case Ord(c) of
        72:
        begin
          if y <> 2 then
          begin
            textbackground(black);write(' ',mas[j],' ');
            y:=y-1;
            j:=j-1;
            gotoxy(x,y);
            textbackground(12);write(#16,mas[j]{,#17});
          end;
        end;
        80:
        begin
          if y <> end_m+1 then
          begin
            textbackground(black);write(' ',mas[j],' ');
            y:=y+1;
            j:=j+1;
            gotoxy(x,y);
            textbackground(12);write(#16,mas[j]{,#17});
          end;
        end;
      end;
    end;
  until c=g;
  videl:=j;
end;

end.
