procedure v_menu;
const end_m=7;
var
  msfm:array[1..end_m] of string;
  x,y:integer;
  c,f:char;
  i:integer;
begin
  y:=1;gotoxy(1,1);
  msfm[1]:='Ввод данных';
  msfm[2]:='Вывод данных';
  msfm[3]:='Запись';
  msfm[4]:='Чтение';
  msfm[5]:='Настройки';
  msfm[6]:='Разработчик';
  msfm[7]:='Выход';
  for i:=1 to end_m do
  begin
    if i=1 then
    begin
      textbackground(red);writeln(#16,msfm[1],#17);textbackground(black);
    end
    else writeln(' ',msfm[i],' ');
  end;

  repeat
    //gotoxy(x,y);
    c:=readkey;
    if c=#0 then
    begin
      c:=readkey;
      case Ord(c) of
        72:begin
             if y <> 1 then
             begin
               textbackground(black);write(' ',msfm[y],' ');
               y:=y-1;gotoxy(1,y);
               textbackground(red);write(#16,msfm[y],#17);
             end;
           end;
        80:begin
             if y<>end_m then
             begin
               textbackground(black);write(' ',msfm[y],' ');
               y:=y+1;gotoxy(1,y);
               textbackground(red);write(#16,msfm[y],#17);
             end;
           end;
      end;
    end;
  until Ord(c) = 13;
  //about_for_me;
end;
end.
